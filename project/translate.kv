<Container@BoxLayout>
    orientation:'vertical'
    spacing: '10px'
    MDToolbar:
        title: 'Голосовой переводчик by altr3s'
        md_bg_color: .2, .2, .2, 1
        specific_text_color: 1, 1, 1, 1

    BoxLayout:
        spacing: '10px'
        size_hint_max_y: '67px'
        MDTextField:
            id: from_lang
            mode: 'fill'
            hint_text: 'From'
        MDIconButton:
            id: change
            icon: 'autorenew'
            on_press: root.ids.from_lang.text, root.ids.to_lang.text = root.ids.to_lang.text, root.ids.from_lang.text
        MDTextField:
            id: to_lang
            mode: 'fill'
            hint_text: 'To'
    BoxLayout:
        size_hint_max_y: '10px'
        Label:
            text: 'Введенный текст'
            color: 'black'

        Label:
            text: 'Переведенный текст'
            color: 'black'
    BoxLayout:
        spacing: '10px'
        TextInput:
            readonly: 'True'
            disabled: 'True'
            id: input_text

        TextInput:
            readonly: 'True'
            disabled: 'True'
            id: output_text
    BoxLayout:
        size_hint_max_y: '37px'
        MDIconButton:
            id: record
            icon: 'access-point'
            on_press: root.record()

        MDIconButton:
            id: translate
            icon: 'arrow-right-drop-circle'
            on_press: root.trans()

